<%- model_class = @obra.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @obra.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @obra.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsavel) %>:</strong></dt>
  <dd><%= @obra.responsavel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @obra.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inicio) %>:</strong></dt>
  <dd><%= @obra.inicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:final) %>:</strong></dt>
  <dd><%= @obra.final %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gasto) %>:</strong></dt>
  <dd><%= @obra.gasto %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              obras_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_obra_path(@obra), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              obra_path(@obra),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
