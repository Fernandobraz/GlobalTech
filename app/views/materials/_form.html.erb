<%= form_for @material, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantidade, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantidade, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :und_medida, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :und_medida, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :referencia_valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :referencia_valor, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                materials_path, :class => 'btn' %>
  </div>
<% end %>
